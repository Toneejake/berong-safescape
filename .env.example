# ===========================================
# BFP Berong - Local Development Environment
# ===========================================
# Copy this file to .env and fill in your values

# Database Configuration (PostgreSQL)
# For local development with Docker:
DATABASE_URL="postgresql://bfp_user:bfp_secret_password@localhost:5432/bfp_berong?schema=public"

# For Docker Compose (internal network uses 'postgres' as hostname):
# DATABASE_URL="postgresql://bfp_user:bfp_secret_password@postgres:5432/bfp_berong?schema=public"

# PostgreSQL credentials (used by docker-compose)
POSTGRES_USER=bfp_user
POSTGRES_PASSWORD=bfp_secret_password
POSTGRES_DB=bfp_berong

# Backend URL
BACKEND_URL=http://localhost:8000

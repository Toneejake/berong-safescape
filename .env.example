# ==============================================
# BFP Berong E-Learning Platform
# Environment Configuration Template
# ==============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!
# ==============================================

# Database Configuration (PostgreSQL)
POSTGRES_USER=bfp_user
POSTGRES_PASSWORD=bfp_secret_password
POSTGRES_DB=bfp_berong

# Database URL for Prisma (constructed from above)
# For Docker: uses container name 'postgres'
DATABASE_URL=postgresql://bfp_user:bfp_secret_password@postgres:5432/bfp_berong?schema=public

# For local development (without Docker):
# DATABASE_URL=postgresql://bfp_user:bfp_secret_password@localhost:5432/bfp_berong?schema=public

# Python Backend URL
# For Docker: uses container name
SIMULATION_API_URL=http://python-backend:8000

# For local development:
# SIMULATION_API_URL=http://localhost:8000

# Node Environment
NODE_ENV=production

